<div class="author">
    <h1 class="author__heading">Hi, I am Raddy</h1>
    <p class="author__body">Web developer and content creator</p>
</div>
<img src="/img/hero-image.webp" alt="Mi foto" class="hero-Image" >

<section class="article">
    <h2 class="article__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination"> &it;View Older Posts</a>
    <% } %>
</section>